#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/d/git/myblog/node_modules/.pnpm/purgecss@4.1.3/node_modules/purgecss/bin/node_modules:/mnt/d/git/myblog/node_modules/.pnpm/purgecss@4.1.3/node_modules/purgecss/node_modules:/mnt/d/git/myblog/node_modules/.pnpm/purgecss@4.1.3/node_modules:/mnt/d/git/myblog/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/d/git/myblog/node_modules/.pnpm/purgecss@4.1.3/node_modules/purgecss/bin/node_modules:/mnt/d/git/myblog/node_modules/.pnpm/purgecss@4.1.3/node_modules/purgecss/node_modules:/mnt/d/git/myblog/node_modules/.pnpm/purgecss@4.1.3/node_modules:/mnt/d/git/myblog/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../../../purgecss@4.1.3/node_modules/purgecss/bin/purgecss.js" "$@"
else
  exec node  "$basedir/../../../../../../purgecss@4.1.3/node_modules/purgecss/bin/purgecss.js" "$@"
fi
