#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/d/02 Git/myblog/node_modules/.pnpm/less@4.3.0/node_modules/less/bin/node_modules:/mnt/d/02 Git/myblog/node_modules/.pnpm/less@4.3.0/node_modules/less/node_modules:/mnt/d/02 Git/myblog/node_modules/.pnpm/less@4.3.0/node_modules:/mnt/d/02 Git/myblog/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/d/02 Git/myblog/node_modules/.pnpm/less@4.3.0/node_modules/less/bin/node_modules:/mnt/d/02 Git/myblog/node_modules/.pnpm/less@4.3.0/node_modules/less/node_modules:/mnt/d/02 Git/myblog/node_modules/.pnpm/less@4.3.0/node_modules:/mnt/d/02 Git/myblog/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../../../less@4.3.0/node_modules/less/bin/lessc" "$@"
else
  exec node  "$basedir/../../../../../../less@4.3.0/node_modules/less/bin/lessc" "$@"
fi
